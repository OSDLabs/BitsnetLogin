#!/bin/bash

# Check availability of google.com
wget -q --spider http://google.com

if [ $? -eq 0 ]; then

	#get ip
	host="$(hostname -I)"

	if [[ "$host" == "10.20."* || "$host" == "10.4.9."* || "$host" == "10.30.24."* ]]; then

		#Send login request
		reply=$(curl -ksd "mode=191&username=f2015022&password=BitsMo0dle!" https://10.1.0.10:8090/httpclient.html)

		#Extract the msg text
		reply="${reply##*\<message><\![CDATA[}"
		reply=$(echo "$reply" | cut -d']' -f1)

	else
		reply="You are not connected to BITSnet"
	fi
else
	reply="You are offline"
fi

#check if script wants notification or not
if [[ "$1" != "--nonotif" && "$1" != "-n" ]]; then

	#send a notification
	notify-send 'BITSnet' "$reply" --icon=network-transmit
fi
